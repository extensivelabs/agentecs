# direnv configuration for AgentECS
# Automatically loads when entering this directory (if direnv is installed)
# See: https://direnv.net/

# Activate Python virtual environment
if [ -d .venv ]; then
    source .venv/bin/activate
    export VIRTUAL_ENV="$(pwd)/.venv"
    PATH_add .venv/bin

    # Add src to PYTHONPATH for easier imports
    PATH_add src
    export PYTHONPATH="$(pwd)/src:${PYTHONPATH:-}"
fi

# Load environment variables from .env if it exists
# This includes API keys, configuration, etc.
if [ -f .env ]; then
    dotenv .env
fi

# Default AgentECS settings (can be overridden in .env)
export AGENTECS_LOG_LEVEL="${AGENTECS_LOG_LEVEL:-INFO}"

# Helpful message
echo "✓ AgentECS environment loaded"
if [ -d .venv ]; then
    echo "  • Virtual environment: .venv"
fi
if [ -f .env ]; then
    echo "  • Environment file: .env"
fi
